<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.CatalogFragment">
    <WebView
        android:id="@+id/web_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/MaltabuYellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/close_web_view"
            android:background="@drawable/rounded_yellow"
            android:src="@drawable/ic_action_x"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>
    </androidx.appcompat.widget.Toolbar>
    <ProgressBar
        android:id="@+id/progress_hor"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/logotype"
        android:background="@color/White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/maltabulogonew_min"
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:layout_height="@dimen/_40sdp"/>
    <View
        android:id="@+id/sort_shadow"
        app:layout_constraintBottom_toTopOf="@id/logotype"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/MaltabuGrey3"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ImageView
        android:id="@+id/sort_shadow_top"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/line_divider"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"/>
</androidx.constraintlayout.widget.ConstraintLayout>